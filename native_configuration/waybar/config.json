{
    "layer": "top",
    "position": "bottom",
    "height": 48,
    
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-right": ["cpu", "memory", "pulseaudio", "network", "battery", "hyprland/language", "tray", "clock"],
    
    "hyprland/window": {
        "icon": true
    },
    
    "pulseaudio": {
        "format": "Vol: {volume:3}%"
    },
    
    "cpu": {
        "interval": 1,
        "format": "CPU: {usage:3}% @ {avg_frequency:>3.1f}"
    },
    
    "memory": {
        "interval": 1,
        "format": "Mem: {used:>4.1f}/{swapUsed:>4.1f}"
    },
    
    "network": {
        "interval": 5,
        "format-ethernet": "Eth: {ipaddr}",
        "format-wifi": "WiFi: {essid} @ {signaldBm:2}"
    },
    
    "battery": {
        "format": "Batt: {time:>} @ {capacity:3}%"
    },
    
    "hyprland/language": {
        "format": "{short:>}"
    }
}


